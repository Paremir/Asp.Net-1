@model BTDLab2.Models.Word

@{
    ViewBag.Title = "EditWord";
}

<h2>EditWord</h2>


<div class="maintext" align="center">
    @using (Html.BeginForm())
    {
        <h2>Изменить слово</h2>
        <fieldset>

            @Html.HiddenFor(m => m.Id)
            <p>
                @Html.LabelFor(m => m.Name, "Название слова: ")
                @Html.EditorFor(m => m.Name)   
                <br />
                @Html.LabelFor(model => model.Name, "Болезнь: ")
                @Html.DropDownListFor(model => model.DiseaseId, ViewBag.Diseases as SelectList);
                <br />
                <br />
                <input type="submit" value="Изменить" />

</fieldset>
    }

</div>
<div class="maintext">
    @Html.ActionLink("Вернуться назад", "Words")
</div>
