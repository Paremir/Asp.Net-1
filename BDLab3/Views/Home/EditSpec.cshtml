@model BDLab3.Models.Specialty

@{
    ViewBag.Title = "EditSpec";
}

<div class="h4" align="center">
    @using (Html.BeginForm())
    {
        <h2>Изменить специальность</h2>
        <fieldset>
            <br />
            @Html.HiddenFor(m => m.Id)
            <p>
                @Html.LabelFor(m => m.Name, "Название специальности: ")
                @Html.EditorFor(m => m.Name)
                <input type="submit" value="Изменить" />
                <br />
                <br />
        </fieldset>
    }
    <br />
    @Html.ActionLink("Вернуться назад", "Specialise")
</div>

