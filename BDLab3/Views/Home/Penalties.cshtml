@model List<BDLab3.Models.Penaltie>

<h2>Штрафы:</h2>
<p class="text-center h3">
    @Html.ActionLink("Добавить штраф", "CreatePen")
</p>
<br />
<table class="table  table-bordered text-center >


    @foreach (var item in Model)
    {
        <tr class="">

            <td class="h4" bgcolor="#dcdcdc">
                <b> @Html.DisplayFor(modelItem => item.Amount)</b>
            </td>
            <td bgcolor="#dcdcdc">
                <b>
                    @Html.ActionLink("Изменить", "EditPen", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "DeletePen", new { id = item.Id })
                </b>
            </td>
            @foreach (var s in item.Employees)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => s.Name)
                    @Html.DisplayFor(modelItem => s.Surname)
                </td>
                <td>

                    @Html.ActionLink("Изменить", "EditEmplo", new { id = s.Id }) |
                    @Html.ActionLink("Подробно", "DetailsEmplo", new { id = s.Id }) |
                    @Html.ActionLink("Удалить", "DeleteEmplo", new { id = s.Id })

                </td>
            </tr>
        }
            </tr>
        }

</table>

<p class="h4">@Html.ActionLink("Вернуться", "WantKnow")</p>